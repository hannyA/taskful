<% layout('templates/tickets-template') %>

<nav style="--bs-breadcrumb-divider: '>'" aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/api/v1/tickets">Tickets</a></li>
    <li class="breadcrumb-item active" aria-current="page">Create Ticket</li>
  </ol>
</nav>

<div class="card" style="width: 38rem">
  <div class="card-header p-4">
    <h1 class="card-title">Create Ticket</h1>
    <p class="card-text">
      Create an incident record to report and request with an issue you are
      having
    </p>
  </div>

  <div class="card-body">
    <form action="/api/v1/tickets/" method="post">
      <div class="mb-3">
        <label class="form-label" for="title">Subject</label>
        <input class="form-control" type="text" name="title" id="title" />
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          name="description"
          id="description"
          aria-label="Description"
        ></textarea>
      </div>

      <div class="mb-3">
        <label class="form-label" for="priority">Priority</label>
        <select class="form-select" name="priority" id="priority">
          <% let options = [ "Low", "Medium", "High", "Very High"];
          options.forEach(option => { %>
          <option value="<%=option %>"><%=option %></option>
          <% }) %>
        </select>
      </div>

      <button type="submit" class="btn btn-outline-dark btn-lg">Create</button>
    </form>
  </div>
</div>
