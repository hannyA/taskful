<% layout('templates/home-template') %>

<section class="container-fluid mt-5">
  <p>Pricing</p>
  <h1>One tool for your whole company.</h1>
  <h1>Free for teams to try.</h1>
  <h4 class="text-muted">
    Access <%=companyName%>'s features. No credit card required.
  </h4>
  <div class="row justify-contefnt-center">
    <div class="mt-3 col-4 offset-2">
      <a
        class="btn btn-primary btn-lg"
        href="/api/<%=apiVersion %>/auth/register"
        role="button"
        >Get started</a
      >
    </div>
  </div>
</section>

<section class="container-fluid">
  <div class="row justify-content-center row-cols-1 row-cols-md-4 g-5">
    <% plans.forEach(plan => { %>
    <div class="col">
      <div
        class="card <% if (plan.type === 'Premium') { %> h-100<% } else{ %> h-99 pricing-card-notpopular-margin <% }%>"
        style="width: 17rem"
      >
        <% if (plan.type === 'Premium') { %>
        <div class="card-header pricing-card-premium-header">Most Popular</div>
        <% } %>
        <div class="card-body">
          <div style="height: 6rem">
            <h5
              class="card-title <%if (plan.type === 'Premium') {%> pricing-card-premium-header <%} else if (plan.type === 'Enterprise') {%> pricing-card-enterprise-header <%}%>"
            >
              <%=plan.type%>
            </h5>
            <h6 class="card-subtitle mb-2 text-muted"><%=plan.description%></h6>
          </div>

          <h3 class="card-text">$<%=plan.price%></h3>
          <p class="price-description"><%=plan.priceDesc%></p>
          <div
            class="d-grid gap-2<%if (plan.type === 'Basic') { %> basic-button <%}%>"
          >
            <a
              class="btn btn-outline-primary btn-lg align-self-center"
              href="/api/<%=apiVersion %>/auth/register"
              role="button"
              >Get started</a
            >
          </div>
          <p class="benefit-text"><%= plan.subTitle %></p>
          <ul class="mt-3 pricing-list" style="list-style: none">
            <% plan.benefits.forEach(benefit => { %>
            <li class="pricing-list-item">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="purple"
                class="bi bi-check"
                viewBox="0 0 16 16"
              >
                <path
                  d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"
                />
              </svg>
              <span class="ms-4 pricing-list-item-text text-muted"
                ><%= benefit %></span
              >
            </li>

            <% }) %>
          </ul>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</section>

<div></div>
