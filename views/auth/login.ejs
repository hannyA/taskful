<% layout('templates/home-template') %>

<section class="container-fluid">
  <div class="row">
    <div class="col-6 auth-img-container">
      <img
        class="img-fluid auth-img"
        src="/images/signin.png"
        alt="Signin image"
      />
    </div>
    <div class="col-6 auth-form">
      <h1 class="my-5 text-center">Login to <%= companyName%></h1>

      <form action="/api/v1/auth/login" method="post">
        <div class="mb-3">
          <label class="form-label" for="username">Email:</label>
          <input
            class="form-control"
            name="username"
            id="username"
            type="email"
          />
        </div>
        <div class="mb-3">
          <label class="form-label" for="password">Password:</label>
          <input
            class="form-control"
            name="password"
            id="password"
            type="text"
          />
        </div>
        <button type="submit" class="btn btn-outline-dark btn-lg">Login</button>
      </form>
      <p class="mt-3">
        Don't have an account? <a href="/api/v1/auth/register">Sign up</a>
      </p>
    </div>
  </div>
</section>
