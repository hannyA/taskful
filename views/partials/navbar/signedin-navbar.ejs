<nav
  id="dash-navbar"
  class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark"
>
  <div class="container-fluid">
    <a class="navbar-brand" href="/api/v1/dashboard">
      <img
        id="logo"
        src="/images/rocket.png"
        alt="Rocket Logo"
        class="d-inline-block align-text-top mx-2"
      />
      <%= companyName%>
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a
            class="nav-link <%= navbar === 'dashboard' && 'active' %>"
            aria-current="page"
            href="/api/v1/dashboard"
            >Dashboard</a
          >
        </li>

        <li class="nav-item">
          <a
            class="nav-link <%= navbar === 'projects' && 'active' %>"
            href="/api/v1/projects"
            >Projects</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link <%= navbar === 'tickets' && 'active' %>"
            href="/api/v1/tickets"
            >Tickets</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link <%= navbar === 'assets' && 'active' %>"
            href="/api/v1/assets"
            >Asset Management</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link <%= navbar === 'tools' && 'active' %>"
            href="/api/v1/tools"
            >Tools & Reports</a
          >
        </li>

        <% if (currentUser.role === "Admin") {%>
        <li class="nav-item">
          <a
            class="nav-link <%= navbar === 'admin' && 'active' %>"
            href="/api/v1/admin/users"
            >Administration</a
          >
        </li>
        <% } %>
      </ul>
      <ul class="navbar-nav ms-auto">
        <% if (currentUser) { %>

        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle"
            href="#"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="32"
              height="32"
              fill="currentColor"
              class="bi bi-person-circle"
              viewBox="0 0 16 16"
            >
              <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
              <path
                fill-rule="evenodd"
                d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"
              />
            </svg>
          </a>
          <ul class="dropdown-menu dropdown-menu-end">
            <li>
              <a class="dropdown-item" href="/api/<%=apiVersion %>/account"
                >Settings</a
              >
            </li>
            <li>
              <a class="dropdown-item" href="/api/<%=apiVersion %>/auth/logout"
                >Logout</a
              >
            </li>
          </ul>
        </li>

        <% } else { %>

        <li class="nav-item">
          <a class="nav-link" href="/api/<%=apiVersion %>/auth/login">Log in</a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/api/<%=apiVersion %>/auth/register"
            >Sign up</a
          >
        </li>

        <% } %>
      </ul>
    </div>
  </div>
</nav>
